<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <Action ID="Speak" params="" speech_text="Buenas! Soy Kobuki, tu robot de reparto!"/>
            <Action ID="Speak" params="" speech_text="Dime dónde quieres que te lleve el paquete: Juanca, Profe, o Aseo"/>
            <RetryUntilSuccessful num_attempts="-1">
                <Fallback>
                    <Action ID="DialogConfirmation" cordx="{x}" cordy="{y}" heard="{heard}" heard_text="{destino}" language="es" mode="set_dest" password="" pswrd=""/>
                    <Inverter>
                        <Action ID="Speak" check_silence="true" params="{heard}" speech_text="No es un punto válido"/>
                    </Inverter>
                </Fallback>
            </RetryUntilSuccessful>
            <Action ID="Speak" params="" speech_text="OK, ahora necesito tu nombre y apellido, se usaran como clave del envío"/>
            <RetryUntilSuccessful num_attempts="-1">
                <Fallback>
                    <Action ID="DialogConfirmation" cordx="{x}" cordy="{y}" heard="{heard}" heard_text="{name}" language="es" mode="set_password" password="" pswrd="{password}"/>
                    <Inverter>
                        <Action ID="Speak" check_silence="true" params="{heard}" speech_text="No es un nombre y apellido válido, deben ser dos palabras"/>
                    </Inverter>
                </Fallback>
            </RetryUntilSuccessful>
            <Action ID="Speak" params="{name}" speech_text="Has dicho: []"/>
            <Action ID="Speak" params="" speech_text=" tu apellido será la clave del envio"/>
            <Action ID="Speak" params="" speech_text="Resumen del envío"/>
            <Action ID="Speak" params="{destino}" speech_text="Tu paquete irá a: []"/>
            <Action ID="Speak" params="{password}" speech_text="La clave del envío será: []"/>
            <Action ID="Speak" params="" speech_text="Ya casi estamos, necesito que deposites con cuidado el paquete encima mía"/>
            <RetryUntilSuccessful num_attempts="-1">
                <Sequence>
                    <Action ID="Speak" params="" speech_text="¿Lo has hecho ya?"/>
                    <Fallback>
                        <Action ID="DialogConfirmation" cordx="" cordy="" heard="{heard}" heard_text="" language="es" mode="receive/give_pkg" password="" pswrd=""/>
                        <Inverter>
                            <Action ID="Speak" check_silence="true" params="{heard}" speech_text="Por favor, necesito el paquete para entregarlo"/>
                        </Inverter>
                    </Fallback>
                </Sequence>
            </RetryUntilSuccessful>
            <Action ID="Speak" params="" speech_text="Perfecto! Me aseguraré de entregarlo! Adiós"/>
            <Action ID="NavigateTo" distance_tolerance="0.1" tf_frame="" will_finish="true" x="{x}" y="{y}"/>
            <Fallback>
                <Sequence>
                    <Fallback>
                        <RetryUntilSuccessful num_attempts="5">
                            <Sequence>
                                <Action ID="Speak" params="{name}" speech_text="Tengo un paquete para []"/>
                                <Action ID="Speak" params="" speech_text="si es usted digame su apellido para recibirlo"/>
                                <Fallback>
                                    <Action ID="DialogConfirmation" cordx="" cordy="" heard="{heard}" heard_text="" language="es" mode="check_password" password="{password}" pswrd=""/>
                                    <Inverter>
                                        <Action ID="Speak" check_silence="true" params="{heard}" speech_text="No coincide la contraseña"/>
                                    </Inverter>
                                </Fallback>
                            </Sequence>
                        </RetryUntilSuccessful>
                        <Action ID="NavigateTo" distance_tolerance="0.1" tf_frame="" will_finish="true" x="0.0" y="0.0"/>
                    </Fallback>
                    <Action ID="Speak" params="" speech_text="Perfecto!Retira el paquete de encima mia"/>
                    <RetryUntilSuccessful num_attempts="-1">
                        <Sequence>
                            <Action ID="Speak" params="" speech_text="¿Lo has hecho ya?"/>
                            <Fallback>
                                <Action ID="DialogConfirmation" cordx="" cordy="" heard="{heard}" heard_text="" language="es" mode="receive/give_pkg" password="" pswrd=""/>
                                <Inverter>
                                    <Action ID="Speak" check_silence="true" params="{heard}" speech_text="Por favor, necesito que retires el paquete"/>
                                </Inverter>
                            </Fallback>
                        </Sequence>
                    </RetryUntilSuccessful>
                    <Action ID="Speak" params="" speech_text="Genial,gracias por confiar en mi para recibir tu envio."/>
                    <Action ID="NavigateTo" distance_tolerance="0.1" tf_frame="" will_finish="true" x="0.0" y="0.0"/>
                </Sequence>
                <Action ID="NavigateTo" distance_tolerance="0.0" tf_frame="" will_finish="true" x="0.0" y="0.0"/>
            </Fallback>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="DialogConfirmation">
            <output_port name="cordx"/>
            <output_port name="cordy"/>
            <output_port name="heard_text"/>
            <input_port default="en" name="language"/>
            <input_port name="mode"/>
            <input_port name="password"/>
            <output_port name="pswrd"/>
            <output_port name="heard"/>
        </Action>
        <Action ID="Listen">
            <output_port name="listened_text"></output_port>
        </Action>
        <Action ID="NavigateTo">
            <input_port name="distance_tolerance"/>
            <input_port name="tf_frame"/>
            <input_port name="will_finish"/>
            <input_port name="x"/>
            <input_port name="y"/>
        </Action>
        <Action ID="Speak">
            <input_port name="params"/>
            <input_port name="speech_text"/>
            <input_port name="check_silence" default="false"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
